<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dim_40"
        android:layout_marginStart="@dimen/dim_40"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_10"
            android:layout_marginBottom="@dimen/dim_10"
            android:text="Welcome to Side engine"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_24"
            android:textStyle="bold" />
        <Button
            android:layout_below="@+id/tvWelcome"
            android:id="@+id/btnStandardTheme"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginEnd="@dimen/dim_16"
            android:layout_marginStart="@dimen/dim_16"
            android:layout_marginTop="@dimen/dim_20"
            android:background="@drawable/btn_bg_corner"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="@dimen/text_18"
            android:textAllCaps="false"
            android:text="Standard Theme" />

        <Button
            android:id="@+id/btnCustomTheme"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@+id/btnStandardTheme"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/dim_16"
            android:layout_marginTop="@dimen/dim_20"
            android:layout_marginEnd="@dimen/dim_16"
            android:background="@drawable/btn_bg_corner"
            android:text="Custom Theme"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_18" />

    </RelativeLayout>

</RelativeLayout>