<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dim_16"
    android:padding="@dimen/dim_16"
    android:orientation="vertical"
    android:background="@drawable/bg_white_rounded">

    <LinearLayout
        android:layout_width="@dimen/dim_60"
        android:layout_height="@dimen/dim_60"
        android:layout_gravity="center"
        android:background="@drawable/rounded_background"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/avenir_medium"
            android:text="!"
            android:textColor="@color/white"
            android:textSize="@dimen/text_40" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dim_20"
        android:fontFamily="@font/avenir_medium"
        android:text="Do you need any help?"
        android:textColor="@color/black"
        android:textSize="@dimen/text_24" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_32"
        android:layout_marginTop="@dimen/dim_20"
        android:layout_marginEnd="@dimen/dim_32"
        android:fontFamily="@font/avenir_medium"
        android:text="We detected that you may have been in an incident. if so, please let us know."
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dim_24"
        android:layout_marginTop="@dimen/dim_20"
        android:layout_marginEnd="@dimen/dim_24"
        android:fontFamily="@font/avenir_medium"
        android:text="Your incident will be reported in"
        android:textColor="@color/lightPink1"
        android:textSize="@dimen/text_16" />

    <LinearLayout
        android:layout_width="@dimen/dim_60"
        android:layout_height="@dimen/dim_60"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_countdown"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCountDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_medium"
            android:text="30"
            android:textColor="@color/white"
            android:textSize="@dimen/text_24" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llYesIncident"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_32"
        android:layout_marginTop="@dimen/dim_20"
        android:layout_marginEnd="@dimen/dim_32"
        android:background="@drawable/btn_bg_corner"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_medium"
            android:padding="@dimen/dim_16"
            android:text="Yes, report an incident"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llNoIncident"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_32"
        android:layout_marginTop="@dimen/dim_20"
        android:layout_marginEnd="@dimen/dim_32"
        android:background="@drawable/button_bottom_rounded_corners"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_medium"
            android:padding="@dimen/dim_16"
            android:text="No I am alright"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16" />
    </LinearLayout>
</LinearLayout>